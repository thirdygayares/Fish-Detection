<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">



    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder2"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>


    <TextView
        android:id="@+id/Timer2"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:visibility="visible"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFinder2"
        android:layout_marginTop="20dp"
        android:text="No Fish Detected"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/count_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/oblong_btn"
        android:fontFamily="@font/century_gothic"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Count"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/oblong_btn"
        android:fontFamily="@font/century_gothic"
        android:text="Restart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancels2"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:text="Cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/century_gothic"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/oblong_btn"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"/>

</RelativeLayout>
